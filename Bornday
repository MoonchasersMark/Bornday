<script>
    function checkBirthday(isBirthday) {
        if (isBirthday) {
            alert("HAPPY BIRTHDAY TO YOUUUUUU!");
            openYouTubeVideo("https://youtu.be/tL6SQ2PGXV4?si=9YiLgYqUUlaaOxy-");
        } else {
            alert("sabe ko nga hindi pa haysss sabe kasi ni mark zuckerborgee HAHAHHAHAHAHA okay byee eyyy ka nalang eyyyy~~~~");
            showPhoto("https://scontent.fmnl17-2.fna.fbcdn.net/v/t1.15752-9/452261039_1006682057609433_365638013582520494_n.png?_nc_cat=111&ccb=1-7&_nc_sid=9f807c&_nc_ohc=0STKljcQAbAQ7kNvgFNyU7m&_nc_ht=scontent.fmnl17-2.fna&oh=03_Q7cD1QEVFvPns73Bi7xth3F4mPbOmy00xSqQxDVFzOn07cfgxw&oe=66C55B62");
        }
    }

    function openYouTubeVideo(url) {
        window.open(url, "_blank");
    }

    function showPhoto(photoUrl) {
        var img = document.createElement("img");
        img.src = photoUrl;
        img.alt = "Your Birthday Photo";
        document.body.appendChild(img);
    }
</script>
